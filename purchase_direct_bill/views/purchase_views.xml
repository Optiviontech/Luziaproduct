<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_direct_bill" model="ir.ui.view">
        <field name="name">purchase.order.form.direct.bill</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//widget[@name='purchase_file_uploader']" position="replace">
                <button name="action_create_bill_direct" 
                        type="object" 
                        string="Create Bill" 
                        class="btn-primary"
                        invisible="state != 'purchase'"
                        help="Create a vendor bill for this purchase order"/>
            </xpath>
        </field>
    </record>
</odoo>
